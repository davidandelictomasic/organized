@page "/register"
@layout AuthLayout
@using Organized.Application.Users.User
@inject CreateUserRequestHandler CreateUserHandler
@inject NavigationManager Navigation

<div class="auth-header">
    <h1>Create Account</h1>
    <p>Join us today</p>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="error-message">
        @errorMessage
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="success-message">
        @successMessage
    </div>
}

<EditForm class="auth-form" Model="userModel" OnValidSubmit="HandleRegister" FormName="registerForm">
    <div class="form-group">
        <label for="Name">Name</label>
        <InputText @bind-Value="userModel.Name" id="Name" class="form-input" placeholder="Enter your name" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <InputText @bind-Value="userModel.Email" id="Email" class="form-input" placeholder="Enter your email" />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <InputText @bind-Value="userModel.Password" id="Password" class="form-input" type="password" placeholder="Create a password" />
    </div>
    <button type="submit" class="btn-auth">Create Account</button>
</EditForm>

<div class="auth-footer">
    <p>Already have an account? <a href="/login">Sign in</a></p>
</div>

@code {
    public class UserModel
    {
        public string? Name { get; set; }
        public string? Email { get; set; }
        public string? Password { get; set; }
    }

    [SupplyParameterFromForm]
    public UserModel? userModel { get; set; } = new();

    private string? errorMessage;
    private string? successMessage;

    private async Task HandleRegister(EditContext context)
    {
        if (string.IsNullOrWhiteSpace(userModel.Name) || 
            string.IsNullOrWhiteSpace(userModel.Email) || 
            string.IsNullOrWhiteSpace(userModel.Password))
        {
            errorMessage = "Please fill in all fields.";
            return;
        }

        var request = new CreateUserRequest
        {
            Name = userModel.Name,
            Email = userModel.Email,
            Password = userModel.Password
        };
        
        var result = await CreateUserHandler.ProcessActiveRequestAsnync(request);
        
        if (result.Value?.Id != null)
        {
            Navigation.NavigateTo("/login");
        }
        else
        {
            errorMessage = "Failed to create account. Please try again.";
        }
    }
}
